<p style="color: green"><%= notice %></p>

<%= render @tracked_keyword %>

<div>
  <%= link_to "Edit this tracked keyword", edit_tracked_keyword_path(@tracked_keyword) %> |
  <%= link_to "Back to tracked keywords", tracked_keywords_path %>

  <%= button_to "Destroy this tracked keyword", @tracked_keyword, method: :delete %>
</div>

<hr>

<h2>Ranking History</h2>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Position</th>
    </tr>
  </thead>
  <tbody>
    <% @ranking_histories.each do |history| %>
      <tr>
        <td><%= history.checked_on.strftime("%d/%m/%Y") %></td>
        <td><%= history.position %></td>
      </tr>
    <% end %>
  </tbody>
</table>
